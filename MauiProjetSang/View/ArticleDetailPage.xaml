<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiProjetSang.View.ArticleDetailPage"
             xmlns:model="clr-namespace:MauiProjetSang.Model"
             xmlns:viewmodel="clr-namespace:MauiProjetSang.ViewModel"
             x:DataType="viewmodel:ArticleDetailViewModel"
             Shell.BackgroundColor="#ec1b23"
             Title="{Binding Article.title}">
    
    <ScrollView>
        <Frame HasShadow="True">
            <VerticalStackLayout
                Padding="5,10" 
                Spacing="20" >
                <Label 
            Text="{Binding Article.title}" 
            FontAttributes="Bold"
            FontSize="15" 
             />
                <Label Text="{Binding Article.published_at}"/>
                <Image Source="{Binding Article.image}"  />
                <Label Text="Blood donation" Margin="0,5" 
                       FontAttributes="Bold" FontSize="15"/>
                <Label Text="{Binding Article.content}" 
                       HorizontalOptions="Center"/>


            </VerticalStackLayout>
        </Frame>
    </ScrollView>

</ContentPage>